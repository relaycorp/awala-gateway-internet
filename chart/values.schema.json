{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "logging",
    "publicAddress",
    "pdcQueue",
    "mongo",
    "nats",
    "keystore"
  ],
  "properties": {
    "logging": {
      "type": "object",
      "required": ["level"],
      "properties": {
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error", "fatal"]
        },
        "target": {
          "type": "string",
          "enum": ["gcp"]
        },
        "envName": {
          "type": "string"
        }
      }
    },
    "ingress": {
      "type": "object",
      "required": [
        "enabled",
        "apiVersion"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "apiVersion": {
          "type": "string"
        },
        "enableTls": {
          "type": "boolean"
        },
        "serviceDomains": {
          "type": "object",
          "properties": {
            "poweb": {
              "type": "string"
            },
            "pohttp": {
              "type": "string"
            },
            "cogrpc": {
              "type": "string"
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "proxyRequestIdHeader": {
      "type": "string"
    },
    "cogrpc": {
      "type": "object",
      "properties": {
        "serviceAnnotations": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object"
            }
          }
        }
      }
    },
    "publicAddress": {
      "type": "string"
    },
    "pdcQueue": {
      "type": "object",
      "required": ["replicas"],
      "properties": {
        "replicas": {
          "type": "number"
        }
      }
    },
    "mongo": {
      "type": "object",
      "required": ["uri", "db", "user", "password"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "db": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "nats": {
      "type": "object",
      "required": [
        "serverUrl",
        "clusterId"
      ],
      "properties": {
        "serverUrl": {
          "type": "string",
          "format": "uri"
        },
        "clusterId": {
          "type": "string"
        }
      }
    },
    "objectStore": {
      "type": "object",
      "required": ["backend", "bucket"],
      "properties": {
        "backend": {
          "type": "string",
          "enum": ["gcs", "minio", "s3"]
        },
        "endpoint": {
          "type": "string"
        },
        "bucket": {
          "type": "string"
        },
        "accessKeyId": {
          "type": "string"
        },
        "secretKey": {
          "type": "string"
        },
        "tlsEnabled": {
          "type": "boolean"
        }
      }
    },
    "keystore": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "location",
            "kmsKeyring",
            "kmsIdKey",
            "kmsSessionEncryptionKey"
          ],
          "properties": {
            "adapter": {
              "type": "string",
              "const": "gcp"
            },
            "location": {
              "type": "string"
            },
            "kmsKeyring": {
              "type": "string"
            },
            "kmsIdKey": {
              "type": "string"
            },
            "kmsSessionEncryptionKey": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "serverUrl",
            "token",
            "kvPrefix"
          ],
          "properties": {
            "adapter": {
              "type": "string",
              "const": "vault"
            },
            "serverUrl": {
              "type": "string",
              "format": "uri"
            },
            "token": {
              "type": "string"
            },
            "kvPrefix": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}
